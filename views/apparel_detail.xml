<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="apparel_detail" name="Apparel Detail">
    <!-- Add an element after the top menu  -->
    <t t-call="website.layout">
      <div id="wrap" class="oe_structure oe_empty">
        <section class="s_text_image pt0 pb0" data-name="Image - Text">
          <div>
            <img
              src="/academy/static/src/img/banner-apparel.png"
              class="container-max-width"
              alt="Odoo â€¢ Image and Text"
              title="banner-apparel"
              aria-describedby="tooltip730266"
            />
          </div>
        </section>
        <section>
          <div class="row pb24">
            <div class="col text-center">
              <img
                src="/academy/static/src/img/black-mono.jpg"
                class="img img-fluid border"
              />
            </div>
            <div class="col">
              <h2 class="text-color-secondary">HONDA BLACK MONO HELMET</h2>
              <p class="text-black font-weight-bold">Harga</p>
              <p class="text-muted">Rp. 595,000</p>
              <form>
                <div class="mb-3">
                  <label for="validationTooltip02 text-black">Ukuran</label>
                  <select
                    class="custom-select mr-sm-2"
                    id="inlineFormCustomSelect"
                    required="true"
                  >
                    <option value="1">M</option>
                    <option value="2">L</option>
                  </select>
                  <div class="valid-tooltip">Looks good!</div>
                </div>
              </form>
              <p>Material</p>
              <ol>
                <li class="text-muted">Plastik ABS tahan benturan</li>
                <li class="text-muted">Kaca Visor Anti UV dan clear</li>
                <li class="text-muted">Inner pad bisa dicuci</li>
                <li class="text-muted">Sertifikasi SNI</li>
              </ol>
            </div>
          </div>
        </section>
        <section class="s_three_columns pb32 pt0 bg-100" data-name="Columns">
          <div class="container">
            <div class="row">
              <div class="col">
                <div class="float-right" data-name="Button">
                  <a
                    href="#"
                    class="btn-primary btn"
                    data-original-title=""
                    title=""
                    aria-describedby="tooltip745048"
                  >
                    <i class="fa fa-heart" />
                    <b> FAVORIT </b>
                  </a>
                </div>
              </div>
              <div class="col">
                <div class="float-left" data-name="Button">
                  <a
                    href="/apparel-order/"
                    class="btn-tertiary btn"
                    data-original-title=""
                    title=""
                    aria-describedby="tooltip745048"
                  >
                    <i class="fa fa-shopping-bag" />
                    <b> PESAN </b>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </t>
  </template>
</odoo>
