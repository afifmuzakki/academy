<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="nearest_dealer" name="Dealer Terdekat">
    <!-- Add an element after the top menu  -->
    <t t-call="website.layout">
      <div id="wrap" class="oe_structure oe_empty">
        <div class="live-chat-riri">
          <a href="/live-chat/">
            <img
              href="/live-chat/"
              class="act-img"
              src="/academy/static/src/img/popup-riri.png"
              data-original-title=""
              title=""
              aria-describedby="tooltip941603"
              data-toggle="modal"
              data-target="#exampleModal"
              style="max-height: 100px; max-width: 250px"
            />
          </a>
        </div>
        <section
          id="myCarousel1665046911785"
          class="s_carousel s_carousel_default carousel slide"
          data-interval="5000"
          data-name="Carousel"
        >
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img
                class="d-block w-100"
                src="https://www.daya-motor.com/wp-content/uploads/2019/08/ADV-SLIDE-1.jpg"
                alt="First slide"
              />
            </div>
            <div class="carousel-item">
              <img
                class="d-block w-100"
                src="https://www.daya-motor.com/wp-content/uploads/2019/08/ADV-SLIDE2-1.jpg"
                alt="Second slide"
              />
            </div>
            <div class="carousel-item">
              <img
                class="d-block w-100"
                src="https://www.daya-motor.com/wp-content/uploads/2019/08/GENIO.jpg"
                alt="Third slide"
              />
            </div>
            <div class="carousel-item">
              <img
                class="d-block w-100"
                src="https://www.daya-motor.com/wp-content/uploads/2019/08/GENIO3.jpg"
                alt="Fourth slide"
              />
            </div>
          </div>
          <div class="bottom-right">
            <div
              class="carousel-control-prev-icon"
              data-target="#myCarousel1665046911785"
              data-slide="prev"
              role="img"
              aria-label="Previous"
              title="Previous"
            >
              <span class="sr-only o_default_snippet_text">Previous</span>
            </div>
            <div
              class="carousel-control-next-icon"
              data-target="#myCarousel1665046911785"
              data-slide="next"
              role="img"
              aria-label="Next"
              title="Next"
            >
              <span class="sr-only">Next</span>
            </div>
          </div>
        </section>
        <section
          class="s_features pb0 bg-color-secondary pt24 pb24"
          data-name="Features"
        >
          <div class="container">
            <div class="row">
              <div class="col-lg-1 offset-lg-1 pt24 pb24">
                <img
                  class="img-fluid o_we_custom_image mr-3 float-left padding-small"
                  src="/academy/static/src/img/dealer-terdekat.svg"
                />
              </div>
              <div class="col-lg-4 m-auto">
                <div>
                  <h3><b>Dealer Terdekat</b></h3>
                </div>
                <div>
                  <a
                    href="/dealer-terdekat"
                    class="text-decoration-none text-color-primary"
                    ><b>Cari dealer terdekatmu &gt;</b>
                  </a>
                </div>
              </div>
              <div class="col-lg-1 offset-lg-1 pt24 pb24">
                <img
                  class="img-fluid o_we_custom_image mr-3 float-left padding-small"
                  src="/academy/static/src/img/price-list.svg"
                />
              </div>
              <div class="col-lg-4 m-auto">
                <div>
                  <h3><b>Pricelist</b></h3>
                </div>
                <div>
                  <a
                    href="/pricelist"
                    class="text-decoration-none text-color-primary"
                    ><b>Cari dealer terdekatmu &gt;</b>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </section>
        <form
          method="get"
          class="o_wsale_products_searchbar_form s_wsale_products_searchbar_input m-4"
          action="/shop"
          data-name="Products Search Input"
        >
          <div role="search" class="input-group">
            <input
              type="text"
              name="search"
              class="search-query form-control oe_search_box"
              placeholder="Search..."
              data-limit="5"
              data-display-description="true"
              data-display-price="true"
              data-display-image="true"
              autocomplete="off"
            />
            <div class="input-group-append">
              <button
                type="submit"
                class="btn btn-primary oe_search_button"
                aria-label="Search"
                title="Search"
                style="z-index: 0"
              >
                <i class="fa fa-search" />
              </button>
            </div>
          </div>
          <input
            name="order"
            type="hidden"
            class="o_wsale_search_order_by"
            value=""
          />
        </form>
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d832.5925890209962!2d107.62203354205454!3d-6.950179207667749!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e68c4a70ddee7fd%3A0x8160374271468184!2sHonda%20Daya%20Motor%20Soekarno%20Hatta%20Bandung%20(Official)!5e0!3m2!1sid!2sid!4v1663658516274!5m2!1sid!2sid"
          width="100%"
          height="450"
          style="border: 0"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        >
        </iframe>
      </div>
    </t>
  </template>
</odoo>
