<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="unit_order" name="Unit Order">
    <!-- Add an element after the top menu  -->
    <t t-call="website.layout">
      <div id="wrap" class="oe_structure oe_empty">
        <script src="/academy/static/src/js/script.js"></script>
        <section class="s_text_image pt0 pb0 bg-100" data-name="Image - Text">
          <div>
            <img
              src="/academy/static/src/img/banner-vario.png"
              class="container-max-width"
              alt="Odoo â€¢ Image and Text"
              data-original-title=""
              title=""
              aria-describedby="tooltip730266"
            />
          </div>
        </section>
        <section
          class="s_text_block bg-color-primary pb8 pt16"
          data-name="Text block"
        >
          <div class="container">
            <div class="row">
              <div class="col-lg-3" id="connect">
                <p class="text-center text-white">DOWNLOAD BROCHURE</p>
              </div>
              <div class="col-lg-3" id="connect">
                <a href="/unit-order/" class="text-decoration-none"
                  ><p class="text-center text-white">LAKUKAN PEMESANAN</p></a
                >
              </div>
              <div class="col-lg-3" id="connect">
                <p class="text-center text-white">TEST RIDE</p>
              </div>
              <div class="col-lg-3" id="connect">
                <p class="text-center text-white">CALCULATOR CICILAN</p>
              </div>
            </div>
          </div>
        </section>
        <section class="pb0 pt0" data-name="Title">
          <div class="container">
            <div class="row s_nb_column_fixed">
              <div class="col-lg-12 s_title pt16 pb0 text-center">
                <h1 class="s_title_default text-color-primary font-weight-bold">
                  Pemesanan Unit
                </h1>
              </div>
            </div>
          </div>
        </section>
        <section class="m-5">
          <form name="form1" class="needs-validation">
          <div class="form-row">
              <div class="col-md-6 mb-3">
                <label for="validationTooltip01">Kategori Produk</label>
                <input
                  type="text"
                  class="form-control"
                  id="validationTooltip01"
                  placeholder="Product Category"
                  required="true"
                />
                <div class="valid-tooltip">Looks good!</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="validationTooltip01">Nama Produk</label>
                <input
                  type="text"
                  class="form-control"
                  id="validationTooltip01"
                  placeholder="Product Name"
                  required="true"
                />
                <div class="valid-tooltip">Looks good!</div>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-6 mb-3">
                <label for="validationTooltip02">Pilih Varian Produk</label>
                <select
                  class="custom-select mr-sm-2"
                  id="inlineFormCustomSelect"
                  required="true"
                >
                  <option value="1">Honda Vario 160 CBS</option>
                  <option value="2">Honda Vario 160 ABS</option>
                </select>
                <div class="valid-tooltip">Looks good!</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="validationTooltip01">Harga OTR</label>
                <input
                  type="text"
                  class="form-control"
                  id="validationTooltip01"
                  placeholder="Rp 27.800.000,-"
                  required="true"
                />
                <div class="valid-tooltip">Looks good!</div>
              </div>
            </div>
            <p class="text-center text-black font-weight-bold">
              Simulasi Cicilan
            </p>
            <div class="form-row">
              <div class="col-md-4 mb-3">
                <label for="validationTooltip02">Pilih DP *Down Payment</label>
                <select
                  class="custom-select mr-sm-2"
                  id="inlineFormCustomSelect"
                  required="true"
                >
                  <option value="">Choose...</option>
                  <option value="1">1.000.000</option>
                  <option value="2">2.500.000</option>
                </select>
                <div class="valid-tooltip">Looks good!</div>
              </div>
              <div class="col-md-2 mb-3">
                <label for="validationTooltip02">Jangka Waktu</label>
                <select
                  class="custom-select mr-sm-2"
                  id="inlineFormCustomSelect"
                  required="true"
                >
                  <option value="">Choose...</option>
                  <option value="1">1 Month</option>
                  <option value="2">2 Month</option></select
                >
              </div>
              <div class="valid-tooltip">Looks good!</div>
              <div class="col-md-6 mb-3">
                <label for="validationTooltip01">Total angsura per bulan</label>
                <input
                  type="text"
                  class="form-control"
                  id="validationTooltip01"
                  placeholder=""
                  value=""
                  required="true"
                />
                <div class="valid-tooltip">Looks good!</div>
                <p>
                  *Simulasi diatas hanya untuk gambaran jumlah angsuran, hubungi
                  team marketing kami untuk mendapatkan harga fix.
                </p>
              </div>
            </div>
            <p class="text-center text-black font-weight-bold">
              Identitas Diri
            </p>
            <div class="form-row">
              <div class="col-md-6 mb-3">
                <label for="validationTooltip01">Nama:</label>
                <input
                  type="text"
                  class="form-control"
                  id="validationTooltip01"
                  placeholder="Input your full name"
                  required="true"
                />
                <div class="valid-tooltip">Looks good!</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="validationTooltip02">Alamat Email:</label>
                <input
                  type="email"
                  class="form-control"
                  id="exampleFormControlInput1"
                  placeholder="name@example.com"
                  required="true"
                />
                <div class="valid-tooltip">Looks good!</div>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-6 mb-3">
                <label for="phonenum">No Telephone:</label>
                <input
                  type="tel"
                  class="form-control"
                  id="phonenum"
                  placeholder="08xxxxxxxx"
                  required="true"
                  minlength="10"
                  maxlength="13"
                />
                <div class="valid-tooltip">Looks good!</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="validationTooltip02">Gender:</label>
                <select
                  class="custom-select mr-sm-2"
                  id="inlineFormCustomSelect"
                  required="true"
                >
                  <option value="">Choose...</option>
                  <option value="1">Laki-laki</option>
                  <option value="2">Perempuan</option>
                </select>
                <div class="valid-tooltip">Looks good!</div>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-6 mb-3">
                <label for="validationTooltip03">City</label>
                <input
                  type="text"
                  class="form-control"
                  id="validationTooltip03"
                  placeholder="City"
                  required="true"
                />
                <div class="invalid-tooltip">Please provide a valid city.</div>
              </div>
              <div class="col-md-3 mb-3">
                <label for="validationTooltip04">State</label>
                <input
                  type="text"
                  class="form-control"
                  id="validationTooltip04"
                  placeholder="State"
                  required="true"
                />
                <div class="invalid-tooltip">Please provide a valid state.</div>
              </div>
              <div class="col-md-3 mb-3">
                <label for="validationTooltip05">Zip</label>
                <input
                  type="text"
                  class="form-control"
                  id="validationTooltip05"
                  placeholder="Zip"
                  required="true"
                />
                <div class="invalid-tooltip">Please provide a valid zip.</div>
              </div>
            </div>
            <p class="text-black">Bersedia dihubungi oleh sales people via ?</p>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                id="inlineCheckbox1"
                value="option1"
              />
              <label class="form-check-label" for="inlineCheckbox1"
                >Whatsapp</label
              >
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                id="inlineCheckbox2"
                value="option2"
              />
              <label class="form-check-label" for="inlineCheckbox2">Telp</label>
            </div>
            <p>*bisa pilih keduanya</p>
            <!-- <div class="text-center">
              <button class="btn btn-stick-red rounded-pill w-25" type="submit">
                <i class="fa fa-shopping-bag" /> PESAN 
              </button>
            </div> -->
            <div class="pb0 pt0">
              <div class="container">
                <div class="row s_nb_column_fixed">
                  <div class="col-lg-12 s_title pt16 pb16">
                    <div class="s_btn text-center pt0 pb0" data-name="Button">
                      <a
                        href="#"
                        class="btn btn-tertiary"
                        data-original-title=""
                        title=""
                        aria-describedby="tooltip11682"
                      >
                        <i class="fa fa-shopping-bag" /><b> PESAN</b>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </section>
      </div>
    </t>
  </template>
</odoo>
