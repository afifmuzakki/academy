<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="live_chat" name="Live Chat">
    <!-- Add an element after the top menu  -->
    <t t-call="website.layout">
      <div id="wrap" class="oe_structure oe_empty">
        <section
          class="oe_img_bg"
          data-name="Image - Text"
          style="
            background-image: url('/academy/static/src/img/banner-vario.png');
          "
        >
          <div class="container">
            <div class="row align-items-center pt24 pb24">
              <div class="col-lg-7 p-auto pt24 pb24">
                <img
                  src="/academy/static/src/img/banner-riri.png"
                  class="img img-fluid"
                />
              </div>
              <div class="col-lg-5">
                <div class="card" style="border-radius: 30px">
                  <div class="mt-4">
                    <h2 class="text-center font-weight-bold text-color-primary">
                      Chat Riri
                    </h2>
                  </div>
                  <div class="m-auto">
                    <p class="text-center text-color-primary">
                      Halo BroSis, Miss Riri siap membantu kamu!
                    </p>
                  </div>
                  <div class="m-3">
                    <form>
                      <div class="form-group">
                        <input
                          type="text"
                          class="form-control"
                          id="formGroupExampleInput"
                          placeholder="Nama"
                          required="true"
                        />
                      </div>
                      <div class="form-group">
                        <input
                          type="tel"
                          class="form-control"
                          id="formGroupExampleInput2"
                          placeholder="No. Telepon"
                          required="true"
                        />
                      </div>
                      <div class="form-group">
                        <input
                          type="text"
                          class="form-control"
                          id="formGroupExampleInput2"
                          placeholder="Kecamatan dan Kota"
                          required="true"
                        />
                      </div>
                    </form>
                    <div class="text-center">
                      <button class="btn btn-primary font-weight-bold w-100">Mulai Chat</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </t>
  </template>
</odoo>
